names = []
end = True
names.append(input("Enter first name:"))
names.append(input("Enter second name:"))
names.append(input("Enter third name:"))
names2 = input("Do you want to invite another person, yeah or nah").upper()

while end == True:
  if names2 == "nah":
    print(names)

  else:
    name = (input("enter another name or type no to stop >>>> ")).lower()

  if name == "nah":
    end = False
    print(names)

  else:
    names.append(name)
  
